{
  "manifest_version": 2,

  "name": "QRL - The Dynamic URL Queue",
  "short_name": "QRL",
  "description": "The mildly practical content queueing system for your browser.",
  "version": "0.3",

  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "*://*.youtube.com/*"
  ], 
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://www.youtube.com https://s.ytimg.com 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["js/bootstrap.js"]
  },
  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "QRL"
  }

}