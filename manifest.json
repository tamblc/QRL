{
  "manifest_version": 2,

  "name": "QRL",
  "description": "The mildly practical content queueing system for your browser.",
  "version": "0.0.1",

  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ], 
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": ["bootstrap.js"]
  },
  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "QRL"
  }

}